<class name="phe server" context="private">

    <require header="PHEModels.pb.h" scope="private"/>

    <require class="phe common" scope="public"/>

    <dependency name="phe hash" class="phe hash"/>
    <dependency name="random" interface="random" project="foundation"/>

    <property name="secret key" class="buffer" access="readonly"/>

    <method name="encrypt">
        <argument name="nc" class="buffer" access="readonly"/>
        <argument name="ns" class="buffer" access="readonly"/>

        <argument name="c0" class="buffer"/>
        <argument name="c1" class="buffer"/>
        <argument name="proof" class="buffer"/>

        <return enum="error"/>
    </method>

</class>
