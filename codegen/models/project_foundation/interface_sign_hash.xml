<interface name="sign hash">
    Provide interface for signing data with private key.

    <method name="signature len" is_const="1">
        Return length in bytes required to hold signature.

        <return type="size"/>
    </method>

    <method name="sign hash">
        Sign data given private key.

        <argument name="hash digest" class="data"/>
        <argument name="hash id" enum="alg id"/>
        <argument name="signature" class="buffer">
            <length method="signature len"/>
        </argument>

        <return enum="status"/>
    </method>
</interface>
