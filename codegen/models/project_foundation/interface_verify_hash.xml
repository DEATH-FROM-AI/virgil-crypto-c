<interface name="verify hash">
    Provide interface for verifying data with public key.

    <method name="verify hash">
        Verify data with given public key and signature.

        <argument name="hash digest" class="data"/>
        <argument name="hash id" enum="alg id"/>
        <argument name="signature" class="data"/>

        <return type="boolean"/>
    </method>
</interface>
