<class name="key info">
    Provide common information about asymmetric key.

    <property name="alg id" enum="alg id"/>
    <property name="impl tag" enum="impl/tag"/>
    <property name="key len" type="size"/>
    <property name="key bitlen" type="size"/>

    <constructor name="with members" scope="private">
        Create fully defined key info.

        <argument name="alg id" enum="alg id"/>
        <argument name="impl tag" enum="impl/tag"/>
        <argument name="key len" type="size"/>
        <argument name="key bitlen" type="size"/>
    </constructor>

    <method name="alg id" is_const="1">
        Algorithm identifier the key belongs to.

        <return enum="alg id"/>
    </method>

    <method name="key len" is_const="1">
        Length of the key in bytes.

        <return type="size"/>
    </method>

    <method name="key bitlen" is_const="1">
        Length of the key in bits.

        <return type="size"/>
    </method>

    <method name="impl tag" is_const="1" visibility="private">
        Return tag of an associated algorithm that can handle this key.

        <return enum="impl/tag"/>
    </method>
</class>
