<class name="signer">
    Sign data of any size.

    <require class="alg factory"/>
    <require interface="alg"/>
    <require interface="sign hash"/>

    <dependency name="hash" interface="hash"/>

    <method name="reset">
        Start a processing a new signature.
    </method>

    <method name="update">
        Add given data to the signed data.

        <argument name="data" class="data"/>
    </method>

    <method name="signature len">
        Return length of the signature.

        <argument name="private key" interface="sign hash"/>

        <return type="size"/>
    </method>

    <method name="sign">
        Accomplish signing and return signature.

        <argument name="private key" interface="key signer"/>
        <argument name="signature" class="buffer">
            <length method="signature len">
                <proxy argument="private key" to="private key"/>
            </length>
        </argument>

        <return enum="status"/>
    </method>
</class>
