<interface name="kdf">
    Provides interface to the key derivation function (KDF) algorithms.

    <method name="derive">
        Calculate hash over given data.

        <argument name="data" class="data"/>
        <argument name="key len" type="size"/>
        <argument name="key" class="buffer">
            <length argument="key len"/>
        </argument>
    </method>
</interface>
