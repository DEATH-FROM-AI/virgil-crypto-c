<interface name="hash stream">
    Provide interface to calculate hash (message digest) over a stream.

    <inherit interface="hash info">
        <constant name="digest len">
            <buf_len method="finish" argument="digest"/>
        </constant>
    </inherit>


    <method name="start">
        Start a new hashing.
    </method>


    <method name="update">
        Add given data to the hash.

        <argument name="data" class="data"/>
    </method>


    <method name="finish">
        Accompilsh hashing and return it's result (a message digest).

        <argument name="digest" class="buffer"/>
   </method>
</interface>
