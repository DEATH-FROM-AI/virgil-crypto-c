<class name="raw card signer">
    Class responsible for signing "raw card".


    <require class="signer" project="foundation"/>
    <require class="sha512" project="foundation"/>
    <require interface="private key" project="foundation"/>

    <dependency name="random" interface="random" project="foundation"/>


    <constant name="k self signer id" type="string" visibility="private">
        Identifier of self-signature.

        <value value="self"/>
    </constant>


    <constant name="k virgil signer id" type="string" visibility="private">
        Identifier of Virgil signature.

        <value value="virgil"/>
    </constant>


    <method name="sign" is_const="1">
        Adds signature to given "raw card" with provided signer and private key.

        <argument name="raw card" class="raw card" access="readwrite"/>
        <argument name="signer id" class="str"/>
        <argument name="private key" interface="private key" project="foundation"/>

        <return enum="status"/>
    </method>


    <method name="self sign" is_const="1">
        Adds self-signature to given "raw card".

        <argument name="raw card" class="raw card" access="readwrite"/>
        <argument name="private key" interface="private key" project="foundation"/>

        <return enum="status"/>
    </method>


    <method name="virgil sign" is_const="1">
        Adds Virgil Signature to given "raw card".

        <argument name="raw card" class="raw card" access="readwrite"/>
        <argument name="private key" interface="private key" project="foundation"/>

        <return enum="status"/>
    </method>


    <method name="create signer" is_const="1" declaration="private">
        Create Signer with a default configuration.

        <return class="signer" project="foundation" access="disown"/>
    </method>
</class>
