<class name="jwt">
    Class that handles JWT.

    <property name="header" class="jwt header">
        Handles JWT Header.
    </property>

    <property name="payload" class="jwt payload">
        Handles JWT Payload.
    </property>

    <property name="signature" class="jwt payload">
        Handles JWT Signature.
    </property>

    <constructor name="with members disown" visibility="private">
        Build JWT from it's parts.

        <argument name="header" class="jwt header" access="disown"/>
        <argument name="payload" class="jwt payload" access="disown"/>
        <argument name="signature" class="jwt payload" access="disown"/>
    </constructor>

    <method name="as string len" is_const="1">
        Return length for JWT string representation buffer.
    </method>

    <method name="as string" is_const="1">
        Return JWT string representation.

        <argument name="str buffer" class="str buffer">
            <length method="as string len"/>
        </argument>
    </method>
</class>
