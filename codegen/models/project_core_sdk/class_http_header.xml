<class name="http header">
    Handles HTTP header in a most generic way.

    <property name="name" class="str mutable"/>
    <property name="value" class="str mutable"/>


    <constant name="name authorization" type="string" visibility="public" definition="private">
        Header name: Authorization

        <value value="Authorization"/>
    </constant>


    <constant name="name content type" type="string" visibility="public" definition="private">
        Header name: Content-Type

        <value value="Content-Type"/>
    </constant>


    <constant name="value application json" type="string"  visibility="public" definition="private">
        Header value: application/json

        <value value="application/json"/>
    </constant>


    <constructor name="with">
        Create fully defined HTTP header.

        Prerequisite: name is not empty.
        Prerequisite: value is not empty.

        <argument name="name" class="str"/>
        <argument name="value" class="str"/>
    </constructor>


    <method name="name" is_const="1">
        Return HTTP header name.

        <return class="str"/>
    </method>


    <method name="value" is_const="1">
        Return HTTP header value.

        <return class="str"/>
    </method>
</class>
