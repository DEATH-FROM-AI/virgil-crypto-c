<class name="ratchet regular message" context="public">

    <require impl="asn1wr" project="foundation" scope="private"/>
    <require impl="asn1rd" project="foundation" scope="private"/>
    <require class="error ctx" project="foundation" scope="public"/>

    <constant name="public key length" definition="public" value="32"/>

    <constant name="max message length" definition="public" value="1024 * 1024 * 1024">
        FIXME
    </constant>

    <property name="version" type="size" size="1"/>
    <property name="counter" type="size" size="4"/>
    <property name="public key" class="buffer" access="readwrite"/>
    <property name="cipher text" class="buffer" access="readwrite"/>

    <constructor name="with members">
        <argument name="version" type="size" size="1"/>
        <argument name="counter" type="size" size="4"/>
        <argument name="public key" class="buffer"/>
        <argument name="cipher text" class="buffer"/>
    </constructor>

    <method name="serialize len" is_static="1">
        <argument name="cipher text len" type="size"/>

        <return type="size"/>
    </method>

    <method name="serialize">
        <argument name="output" class="buffer"/>

        <return enum="error"/>
    </method>

    <method name="deserialize" is_static="1">
        <argument name="input" class="data"/>
        <argument name="err ctx" class="error ctx" access="readwrite"/>

        <return class="self" access="disown"/>
    </method>

</class>
