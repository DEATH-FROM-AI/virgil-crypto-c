<class name="ratchet receiver chains" context="internal" scope="internal">

    <require class="ratchet common hidden" scope="context"/>
    <require class="ratchet chain key" scope="private"/>

    <require header="RatchetSession.pb.h" scope="public"/>
    <require header="pb_decode.h" scope="public"/>
    <require header="pb_encode.h" scope="public"/>

    <property name="chains" class="ratchet receiver chain list node" access="readwrite"/>

    <method name="first chain">
        <return class="ratchet receiver chain" access="readwrite"/>
    </method>

    <method name="find chain">
        <argument name="ratchet public key" class="data"/>

        <return class="ratchet receiver chain" access="readwrite"/>
    </method>

    <method name="add chain">
        <argument name="receiver chain" class="ratchet receiver chain" access="readwrite"/>
    </method>

    <method name="delete next chain if possible">
        <argument name="chain" class="ratchet receiver chain" access="readwrite"/>
        <argument name="prev chain count" type="size" access="readwrite"/>
    </method>

    <method name="serialize">
        <argument name="receiver chains pb" class="ReceiverChains" library="nanopb" access="readwrite"/>
    </method>

    <method name="deserialize" is_static="1">
        <argument name="receiver chains pb" class="ReceiverChains" library="nanopb" access="readwrite"/>
        <argument name="receiver chains" class="self" access="readwrite"/>
    </method>

</class>
