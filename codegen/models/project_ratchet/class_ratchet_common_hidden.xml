<class name="ratchet common hidden" context="none" scope="private">
    <constant name="ratchet regular message version" value="1"/>
    <constant name="ratchet protocol version" value="1"/>
    <constant name="ratchet message version" value="1"/>
    <constant name="ratchet group info version" value="1"/>
    <constant name="ratchet shared key len" value="32"/>
    <constant name="ratchet key len" value="32"/>
    <constant name="max skipped messages" value="40"/>
    <constant name="max receivers chains" value="5"/>
    <constant name="max message gap" value="2000"/>
    <constant name="signature len" value="64"/>

    <constant name="max regular message len" value="32834"/>
    <constant name="max prekey message len" value="32975"/>

    <constant name="max group regular message len" value="32906"/>
    <constant name="max group info message len" value="10845"/>
    <constant name="participant len" value="108"/>
    <constant name="max cipher text len" value="32768"/>
    <constant name="max epoches count" value="5"/>

    <require header="pb_decode.h" scope="public"/>
    <require header="pb_encode.h" scope="public"/>

    <require class="buffer" project="common" scope="private"/>

    <method name="buffer decode callback" is_static="1">
        <argument name="stream" class="pb_istream_t" library="nanopb" access="readwrite"/>
        <argument name="field" class="pb_field_t" library="nanopb"/>
        <argument name="arg" class="void*" library="nanopb" access="readwrite"/>
        <argument name="max size" type="size"/>

        <return type="boolean"/>
    </method>

    <method name="buffer encode callback" is_static="1">
        <argument name="stream" class="pb_ostream_t" library="nanopb" access="readwrite"/>
        <argument name="field" class="pb_field_t" library="nanopb"/>
        <argument name="arg" class="any" access="readwrite">
            <array length="given" access="readonly"/>
        </argument>

        <return type="boolean"/>
    </method>
</class>