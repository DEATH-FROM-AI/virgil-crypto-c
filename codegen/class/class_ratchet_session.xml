<class name="ratchet session" context="private">

    <require header="virgil/foundation/vscf_error_ctx.h" scope="public"/>
    <require header="ed25519/ed25519.h" is_system="1" scope="private"/>
    <require class="ratchet prekey message" scope="private"/>
    <require class="ratchet common" scope="public"/>

    <dependency name="rng" interface="ratchet rng"/>
    <dependency class="ratchet" name="ratchet"/>

    <property name="received first response" type="boolean"/>
    <property name="sender identity public key" class="buffer"/>
    <property name="sender ephemeral public key" class="buffer"/>
    <property name="receiver longterm public key" class="buffer"/>
    <property name="receiver onetime public key" class="buffer"/>

    <method name="initiate">
        <argument class="context"/>
        <argument name="sender identity private key" class="buffer"/>
        <argument name="receiver identity public key" class="buffer"/>
        <argument name="receiver long term public key" class="buffer"/>
        <argument name="receiver one time public key" class="buffer"/>
    </method>

    <method name="respond">
        <argument class="context"/>
        <argument name="sender identity public key" class="buffer"/>
        <argument name="sender ephemeral public key" class="buffer"/>
        <argument name="receiver identity private key" class="buffer"/>
        <argument name="receiver long term private key" class="buffer"/>
        <argument name="receiver one time private key" class="buffer"/>
    </method>

    <method name="encrypt len">
        <argument class="context"/>
        <argument name="plain text len" type="size"/>

        <return type="size"/>
    </method>

    <method name="encrypt">
        <argument class="context"/>
        <argument name="plain text" class="data"/>
        <argument name="cipher text" class="buffer" access="readwrite"/>

        <return enum="error"/>
    </method>

    <method name="decrypt len">
        <argument class="context"/>
        <argument name="cipher text len" type="size"/>

        <return type="size"/>
    </method>

    <method name="decrypt">
        <argument class="context"/>
        <argument name="cipher text" class="data"/>
        <argument name="plain text" class="buffer" access="readwrite"/>

        <return enum="error"/>
    </method>

</class>
