<class name="ratchet cipher" context="public">

    <require header="virgil/foundation/vscf_hmac256.h" scope="private"/>
    <require header="virgil/foundation/vscf_hkdf.h" scope="private"/>
    <require header="virgil/foundation/vscf_aes256_gcm.h" scope="private"/>
    <require header="virgil/foundation/vscf_error_ctx.h" scope="public"/>

    <dependency name="aes256 gcm" impl="aes256 gcm" project="foundation"/>
    <property name="kdf info" class="buffer" access="readwrite"/>

    <method name="encrypt len">
        <argument class="context"/>
        <argument name="plain text len" type="size"/>

        <return type="size"/>
    </method>

    <method name="decrypt len">
        <argument class="context"/>
        <argument name="cipher text len" type="size"/>

        <return type="size"/>
    </method>

    <method name="encrypt">
        <argument class="context"/>
        <argument name="key" class="data"/>
        <argument name="plain text" class="data"/>

        <argument name="buffer" class="buffer" access="readwrite"/>

        <return type="error"/>
    </method>

    <method name="decrypt">
        <argument class="context"/>
        <argument name="key" class="data"/>
        <argument name="cipher text" class="data"/>

        <argument name="buffer" class="buffer" access="readwrite"/>

        <return type="error"/>
    </method>

</class>
