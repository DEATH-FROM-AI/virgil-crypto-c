<class name="olm cipher" context="public">

    <require header="virgil/foundation/vscf_error_ctx.h" scope="private"/>

    <method name="encrypt">
        <argument class="context"/>
        <argument name="key" class="data"/>
        <argument name="plain text" class="data"/>

        <argument name="buffer" class="buffer" access="readwrite"/>

        <return type="error"/>
    </method>

    <method name="decrypt">
        <argument class="context"/>
        <argument name="key" class="data"/>
        <argument name="cipher text" class="data"/>

        <argument name="buffer" class="buffer" access="readwrite"/>

        <return type="error"/>
    </method>

</class>
