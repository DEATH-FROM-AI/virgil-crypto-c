<interface name="encrypt">
    Provide interface for data encryption.

    <method name="encrypt" context="impl">
        Encrypt given data.

        <argument name="data" type="data"/>
        <argument name="data len" type="size"/>

        <argument name="enc" type="data" access="writeonly"/>
        <argument name="enc len" type="size"/>
        <argument name="out len" type="size" access="writeonly" is_reference="1"/>

        <return type="integer"/>
    </method>

    <method name="required enc len" context="impl">
        Calculate required buffer length to hold the encrypted data.
        If argument 'auth tag len' is 0, then returned length
        adjusted to hold auth tag as well.

        <argument name="data len" type="size"/>
        <argument name="auth tag len" type="size"/>
        <return type="size"/>
    </method>
</interface>
