<interface name="cipher">
    Provide interface for symmetric ciphers.

    <require module="cipher padding"/>

    <inherit interface="encrypt"/>
    <inherit interface="decrypt"/>

    <method name="nonce len">
        Returns nonce length in bytes, or 0 if nonce is not required.

        <return type="size"/>
    </method>

    <method name="set nonce">
        Setup IV or nonce.

        <argument name="nonce" type="data"/>
        <argument name="nonce len" type="size"/>
    </method>

    <method name="set padding">
         Set padding mode, for cipher modes that use padding.

         <argument name="padding" enum=".(class_cipher_padding_enum_cipher_padding)"/>
    </method>
</interface>
