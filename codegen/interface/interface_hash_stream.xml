<interface name="hash stream">
    Provide interface to calculate hash (message digest) over a stream.

    <inherit interface="hash info" />


    <method name="start">
        Start a new hashing.
    </method>


    <method name="update">
        Add given data to the hash.

        <argument name="data" type="data"/>

        <argument name="data len" type="size"/>
    </method>


    <method name="finish">
        Accompilsh hashing and return it's result (a message digest).

        <argument name="digest" type="data" access="writeonly">
            <array length="known" length_constant="hash info digest len" />
        </argument>

        <argument name="digest len" type="size"/>
   </method>
</interface>
