<interface name = "hash">
    Provides interface to the stateless hashing (messege digest) algorithms.

    <inherit interface = "hash info" />

    <method name = "hash">
        Calculate hash over given data.

        <argument name = "data" type = "data" size = "given" />

        <argument name = "digest" type = "data" size = "known" mode = "return">
            <size source = "hash info" constant = "digest size" />
        </argument>

    </method>
</interface>
